(subdir
 kissat
 (include_subdirs unqualified)
 (dirs src)
 (foreign_library
  (archive_name kissat)
  (language c)
  (names :standard \ config application main)
  (include_dirs src)
  (flags :standard -DNDEBUG -DNBUILD))
 (subdir
  src
  (rule
   (deps ../VERSION)
   (target build.h)
   (action
    (with-stdout-to
     %{target}
     (progn
      (echo "#define VERSION ")
      (with-stdin-from
       %{deps}
       (run ../../../utils/stringify.exe))
      (echo "\n")
      (echo "#define COMPILER \"\"\n")
      (echo "#define ID (char*)NULL\n")
      (echo "#define BUILD \"\"\n")
      (echo "#define DIR \"\"\n")))))))

