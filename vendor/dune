(data_only_dirs cadical symfpu bitwuzla)

(env
 (_
  (cxx_flags :standard -I/opt/homebrew/include)))

(subdir
 bitwuzla
 (include_subdirs qualified)
 (dirs include src)
 (subdir
  src/util
  (include_subdirs qualified)
  (foreign_library
   (archive_name bitwuzla-utils)
   (language cxx)
   (names hash logger printer resources statistics util integer gmp_utils)
   (flags :standard -std=c++17 -I. -I.. -DNDEBUG)
   (extra_deps ../../../.bitwuzla_tree)))
 (subdir
  src/lib
  (include_subdirs qualified)
  (foreign_library
   (archive_name bitwuzla-libs)
   (language cxx)
   (names
    aig_cnf
    aig_manager
